{% extends 'base.html.twig' %}

{% block title %}Agent{% endblock %}

{% block body %}
    <h1>Agent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agent.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ agent.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ agent.roles ? agent.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ agent.password }}</td>
            </tr>
            <tr>
                <th>Code_agent</th>
                <td>{{ agent.codeAgent }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ agent.telephone }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ agent.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ agent.createdAt ? agent.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ agent.updatedAt ? agent.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ agent.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('agent_index') }}">back to list</a>

    <a href="{{ path('agent_edit', {'id': agent.id}) }}">edit</a>

    {{ include('agent/_delete_form.html.twig') }}
{% endblock %}
